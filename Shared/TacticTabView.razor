@inject GitHubQueryService IssuesService

@if (OrgRepos != null)
{
    <RadzenTabs>
        <Tabs>
            @foreach (OrgRepo item in OrgRepos)
            {
                if (item.HasIssues)
                {
                    <RadzenTabsItem Text="@item.Title">
                        <GridList OrgName="@item.OrgName" RepoName="@item.RepoName" Label="@Label" IsOpen="@IsOpenOnly" EnableApproval="@EnableApproval" />
                    </RadzenTabsItem>
                }
            }
        </Tabs>
    </RadzenTabs>
}
else
{
    <p><em>🔍 Searching the interwebs...</em></p>
    <RadzenProgressBar Mode="Radzen.ProgressBarMode.Indeterminate" ShowValue="false" Value="100" />
}
